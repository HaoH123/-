/*css*/
/*自己研究动画研究一下午，还是不熟悉，加注释提醒自己，希望老师能理解*/
*{
  margin: 0;
    padding: 0;
}
p {
    font-size: 20pt;
    color: red;
    font-family: "华文隶书 ";
}
ul,ol{
    list-style: none;
}
body{
    height: 100vh;
    background-image: linear-gradient() ;
    background-color:cornsilk;
    justify-content: center;
    align-content: center;
}
ul{
    height:200px;
    display:flex;

}
li{
    height:20px;
    width: 20px;
    border-radius: 10px;
    background-color:red;
    margin-right:20px;
}
li:nth-child(1){
    background-color: crimson;
    animation: s1 5s 0s infinite ;/*时间4秒，延迟0秒，循环动画*/
}
li:nth-child(2){
    background-color: blueviolet;
    animation: s3 5s 400ms infinite ;
}
li:nth-child(3){
    background-color: darkorange;
    animation: s3 5s  800ms infinite ;
}
li:nth-child(4){
    background-color: salmon;
    animation: s2 5s 1200ms infinite ;
}
li:nth-child(5){
    background-color: lightseagreen;
    animation: s2 5s 1600ms infinite ;
}
li:nth-child(6){
    background-color: deeppink;
    animation: s2 5s 2s infinite ;
}
li:nth-child(7){
    background-color: aquamarine;
    animation: s3 5s  2400ms infinite ;
}
li:nth-child(8){
    background-color: khaki;
    animation: s3 5s 2800ms infinite ;
}
li:nth-child(9) {
    background-color: firebrick;
    animation: s1 5s 3200ms infinite ;
}
@keyframes s1 { /*加动画*/
    35%,55% {
        height: 100px;
        transform: translateY(-40px);
    }
    75%,100%{
        height:0px;
        transform:translateY(0px) ;
    }

}
@keyframes s2 {
    35%,55% {
        height: 140px;
        transform: translateY(-50px);
    }
    75%,100%{
        height:0px;
        transform:translateY(0px) ;
    }

}
@keyframes s3 {
    35%,55% {
        height: 120px;
        transform: translateY(-45px);
    }
    75%,100%{
        height:0px;
        transform:translateY(0px) ;
    }

}
